---
import Layout from '../layouts/Layout.astro';

export const prerender = true;
---

<Layout title="Page Not Found">
  <div class="min-h-[50vh] flex flex-col items-center justify-center">
    <h1 class="text-4xl font-bold text-primary mb-4">404: Page Not Found</h1>
    <p class="text-gray-400 mb-8">The page you're looking for doesn't exist.</p>
    <a 
      href="/" 
      class="bg-secondary hover:bg-secondary-light text-white px-6 py-2 rounded-md transition-colors"
    >
      Return Home
    </a>
  </div>
</Layout>