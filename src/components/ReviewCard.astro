---
import RatingStars from './RatingStars.astro';

interface Props {
  rating: number;
  comment: string;
  imageUrl?: string;
  venueName: string;
  venueType: string;
  createdAt: string;
}

const { rating, comment, imageUrl, venueName, venueType, createdAt } = Astro.props;
const date = new Date(createdAt).toLocaleDateString();
---

<div class="bg-dark-card rounded-lg shadow-lg overflow-hidden border border-dark-border">
  {imageUrl && (
    <img src={imageUrl} alt="Review" class="w-full h-48 object-cover" />
  )}
  <div class="p-6">
    <div class="flex justify-between items-start mb-4">
      <div>
        <h3 class="text-xl font-semibold text-gray-100">{venueName}</h3>
        <span class="bg-primary-dark/20 text-primary-light text-xs px-2 py-1 rounded-full">
          {venueType}
        </span>
      </div>
      <RatingStars rating={rating} />
    </div>
    <p class="text-gray-400 mb-4">{comment}</p>
    <p class="text-gray-500 text-sm">{date}</p>
  </div>
</div>