---
import RatingStars from './RatingStars.astro';
import type { Venue } from '../lib/venues/venue-service';

interface Props {
  venue: Venue;
}

const { venue } = Astro.props;
---

<div class="bg-dark-card rounded-lg shadow-lg p-8 border border-dark-border">
  <div class="flex justify-between items-start mb-4">
    <div>
      <h1 class="text-3xl font-bold text-primary-light">{venue.name}</h1>
      <div class="mt-2 flex items-center">
        <RatingStars rating={venue.rating} size="lg" />
        <span class="text-gray-400 ml-2">
          ({venue.reviews.length} {venue.reviews.length === 1 ? 'review' : 'reviews'})
        </span>
      </div>
    </div>
    <span class="bg-primary-dark/20 text-primary-light px-3 py-1 rounded-full text-sm">
      {venue.type}
    </span>
  </div>
  
  <p class="text-gray-400 mb-4">{venue.description}</p>
  <p class="text-gray-500 mb-8">{venue.address}</p>
</div>