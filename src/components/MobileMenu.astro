---
<div class="lg:hidden">
  <button
    id="menuButton"
    class="text-gray-100 hover:text-primary-light transition-colors"
    aria-label="Toggle menu"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path 
        stroke-linecap="round" 
        stroke-linejoin="round" 
        stroke-width="2" 
        d="M4 6h16M4 12h16M4 18h16"
      />
    </svg>
  </button>

  <div
    id="mobileMenu"
    class="hidden fixed inset-0 bg-dark-bg bg-opacity-95 z-50"
  >
    <div class="flex justify-end p-4">
      <button
        id="closeMenu"
        class="text-gray-100 hover:text-primary-light transition-colors"
        aria-label="Close menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M6 18L18 6M6 6l12 12"
          />
        </svg>
      </button>
    </div>
    <nav class="p-4">
      <ul class="space-y-4">
        <li>
          <a 
            href="/bars" 
            class="block text-xl text-center text-gray-100 hover:text-primary-light transition-colors"
          >
            Bars
          </a>
        </li>
        <li>
          <a 
            href="/breweries" 
            class="block text-xl text-center text-gray-100 hover:text-primary-light transition-colors"
          >
            Breweries
          </a>
        </li>
        <li>
          <a 
            href="/reviews" 
            class="block text-xl text-center text-gray-100 hover:text-primary-light transition-colors"
          >
            Latest Reviews
          </a>
        </li>
        <li>
          <a 
            href="/contact" 
            class="block text-xl text-center text-gray-100 hover:text-primary-light transition-colors"
          >
            Contact
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>

<script>
  const menuButton = document.getElementById('menuButton');
  const closeButton = document.getElementById('closeMenu');
  const mobileMenu = document.getElementById('mobileMenu');

  function toggleMenu() {
    mobileMenu?.classList.toggle('hidden');
    document.body.style.overflow = mobileMenu?.classList.contains('hidden') ? '' : 'hidden';
  }

  menuButton?.addEventListener('click', toggleMenu);
  closeButton?.addEventListener('click', toggleMenu);

  // Close menu when clicking outside
  mobileMenu?.addEventListener('click', (e) => {
    if (e.target === mobileMenu) {
      toggleMenu();
    }
  });
</script>